# Be silent...
.SILENT:


# Version number...
LPRINT_VERSION	=	@LPRINT_VERSION@


# Programs and options...
AR		=	@AR@
ARFLAGS		=	@ARFLAGS@
CC		=	@CC@
CFLAGS		=	-I.. @CFLAGS@
CODESIGN_IDENTITY =	Developer ID
INSTALL		=	@INSTALL@
LDFLAGS		=	@LDFLAGS@
LIBS		=	@LIBS@
MKDIR           =       @MKDIR@ -p
RANLIB		=	@RANLIB@
RM		=	@RM@ -f
RMDIR		=	@RMDIR@
SHELL		=	/bin/sh


# Directories...
bindir		=	@bindir@
datadir		=	@datadir@
datarootdir	=	@datarootdir@
exec_prefix	=	@exec_prefix@
includedir	=	@includedir@
infodir		=	@infodir@
libdir		=	@libdir@
libexecdir	=	@libexecdir@
localstatedir	=	@localstatedir@
mandir		=	@mandir@
oldincludedir	=	@oldincludedir@
prefix		=	@prefix@
privateinclude	=	@privateinclude@
sbindir		=	@sbindir@
sharedstatedir	=	@sharedstatedir@
srcdir		=	@srcdir@
sysconfdir	=	@sysconfdir@
top_srcdir	=	@top_srcdir@

BUILDROOT	=	$(DSTROOT)$(RPM_BUILD_ROOT)$(DESTDIR)


# Build commands...
.c.o:
	echo Compiling $<...
	$(CC) $(CFLAGS) -c -o $@ $<


# Targets...
OBJS		=	\
			device-common.o \
			driver-common.o \
			driver-cpcl.o \
			driver-dymo.o \
			driver-epl1.o \
			driver-epl2.o \
			driver-fgl.o \
			driver-pcl.o \
			driver-zpl.o \
			lprint.o \
			lprint-cancel.o \
			lprint-config.o \
			lprint-devices.o \
			lprint-jobs.o \
			lprint-printers.o \
			lprint-server.o \
			lprint-shutdown.o \
			lprint-status.o \
			lprint-submit.o \
			server-ipp.o \
			server-job.o \
			server-log.o \
			server-print.o \
			server-printer.o
TARGETS		=	\
			lprint


# Make everything...
all:	$(TARGETS)


# Clean everything...
clean:
	$(RM) $(TARGETS) $(OBJS)


# Install everything...
install:	all
	$(INSTALL) -d -m 755 $(BUILDROOT)$(bindir)
	$(INSTALL) -c -m 755 lprint $(BUILDROOT)$(bindir)
	$(INSTALL) -d -m 755 $(BUILDROOT)$(mandir)/man1
	$(INSTALL) -c -m 644 lprint.1 $(BUILDROOT)$(mandir)/man1
	$(INSTALL) -c -m 644 lprint-cancel.1 $(BUILDROOT)$(mandir)/man1
	$(INSTALL) -c -m 644 lprint-config.1 $(BUILDROOT)$(mandir)/man1
	$(INSTALL) -c -m 644 lprint-devices.1 $(BUILDROOT)$(mandir)/man1
	$(INSTALL) -c -m 644 lprint-jobs.1 $(BUILDROOT)$(mandir)/man1
	$(INSTALL) -c -m 644 lprint-printers.1 $(BUILDROOT)$(mandir)/man1
	$(INSTALL) -c -m 644 lprint-send.1 $(BUILDROOT)$(mandir)/man1
	$(INSTALL) -c -m 644 lprint-server.1 $(BUILDROOT)$(mandir)/man1
	$(INSTALL) -c -m 644 lprint-shutdown.1 $(BUILDROOT)$(mandir)/man1
	$(INSTALL) -c -m 644 lprint-status.1 $(BUILDROOT)$(mandir)/man1
	$(INSTALL) -d -m 755 $(BUILDROOT)$(mandir)/man5
	$(INSTALL) -c -m 644 lprint.conf.5 $(BUILDROOT)$(mandir)/man5


# Test everything...
test:	$(TARGETS)


# LPrint program...
lprint:	$(OBJS)
	echo Linking $@...
	$(CC) $(LDFLAGS) -o $@ $(OBJS) $(LIBS)
	if test `uname` = Darwin; then \
		echo Code-signing $@...; \
		codesign -s "$(CODESIGN_IDENTITY)" $@; \
	fi


# Dependencies...
$(OBJS):	common.h config.h device-common.h driver-common.h lprint.h Makefile
